  {
    "name": "pact",
    "version": "3.0.0",
    "author": "Jonathan Johnson",
    "license": "MIT",
    "description": "This was inspired from [Marie Drake](https://www.mariedrake.com/) who wrote the article [Contract Testing with Pact.js and Jest](https://www.mariedrake.com/post/contract-testing-with-pact-js-and-jest)",

    "scripts": {
      "clean": "rimraf pacts",

      "test": "npm run clean && npm run test:consumer && npm run test:publish && npm run test:provider",
      "test:no:publish": "npm run test:consumer-a && test:consumer-b && npm run test:provider",

      "test:publish": "pact-broker publish ./pacts --consumer-app-version 1.0.101 --auto-detect-version-properties --broker-base-url=$PACT_BROKER_URL --broker-username=$PACT_BROKER_USERNAME --broker-password=$PACT_BROKER_PASSWORD",
      "test:publish-x": "pact-broker publish ./pacts --consumer-app-version 1.0.101 --auto-detect-version-properties --broker-base-url=https://582e70a49e314ad4922914a884591f36-3232239621-30111-kira03.environments.katacoda.com --broker-username=pactbroker --broker-password=pactbroker",
      "publish:pact": "cross-env-shell pact-broker publish ./pacts --consumer-app-version 1.0.101 --broker-base-url $PACT_BROKER_URL --broker-username=$PACT_BROKER_USERNAME --broker-password=$PACT_BROKER_PASSWORD",

      "test:consumer-a": "jest consumer/consumer-contract-a.spec.js --env=node",
      "test:consumer-b": "jest consumer/consumer-contract-b.spec.js --env=node",

      "can:i:deploy:consumer": "cross-env-shell pact-broker can-i-deploy --pacticipant Consumer --version $CIRCLE_SHA1 --pacticipant Provider --latest staging --broker-base-url $PACT_BROKER_URL",
      "test:provider": "node provider/provider-service.js & jest provider/provider-contract.spec.js --testTimeout=10000",
      "create:provider:tag": "cross-env-shell pact-broker create-version-tag --pacticipant Provider --version 1.0.0 --tag staging --broker-base-url $PACT_BROKER_URL",
      "create:consumer:tag": "cross-env-shell pact-broker create-version-tag --pacticipant Consumer --version $CIRCLE_SHA1 --tag staging --broker-base-url $PACT_BROKER_URL"
    },

    "devDependencies": {
      "@pact-foundation/pact": "^13.1.3",
      "axios": "^1.7.7",
      "cross-env": "^7.0.3",
      "express": "^4.21.0",
      "jest": "^29.7.0",
      "jest-pact": "^0.11.1",
      "joi": "^17.13.3",
      "rimraf": "^6.0.1"
    }
  }
